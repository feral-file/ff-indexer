# FF-Indexer Environment Variables Template
# Copy this file to .env and configure the values below
# 
# The services use config.yaml files mounted as volumes,
# but still need these environment variables for variable substitution

# REQUIRED: GitHub Authentication for private repositories
# Create a GitHub Personal Access Token with repo access
GITHUB_USER=your_github_username
GITHUB_TOKEN=your_github_personal_access_token

# Foundation Services Database Credentials
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=ff_indexer_mongo_password
MONGO_DATABASE=nft_indexer

POSTGRES_DB=ff_indexer
POSTGRES_USER=postgres
POSTGRES_PASSWORD=ff_indexer_postgres_password

# REQUIRED: External service API keys
# Get your Infura project ID from https://infura.io/
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID
ETHEREUM_WS_URL=wss://sepolia.infura.io/ws/v3/YOUR_PROJECT_ID

# Get your OpenSea API key from https://docs.opensea.io/reference/api-keys
OPENSEA_API_KEY=YOUR_OPENSEA_API_KEY

# Optional: Cloudflare Images configuration (for image-indexer)
CLOUDFLARE_ACCOUNT_HASH=
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_URL_PREFIX=

# Optional: AWS configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Optional: Sentry error tracking
SENTRY_DSN=

# Contract addresses (default values provided)
SERIES_REGISTRY_CONTRACT=0xDf0a1AD1E06bB2d70B590F73B1069A32f2B8Bc41

# Account server
GRPC_ENDPOINT=