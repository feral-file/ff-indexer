{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "strict": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    }
}
